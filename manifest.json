{
  "manifest_version": 3,
  "name": "No YouTube Shorts",
  "version": "1.0.0",
  "description": "Hides YouTube Shorts shelves and removes Shorts navigation links.",
  "permissions": [],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}
